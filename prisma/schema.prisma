// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Folder {
  id        String   @id @default(uuid())
  name      String
  parentId  String?
  parent    Folder?  @relation("FolderToFolder", fields: [parentId], references: [id], onDelete: Cascade)
  children  Folder[] @relation("FolderToFolder")
  notes     VideoNote[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VideoNote {
  id          String   @id @default(uuid())
  title       String
  videoUrl    String
  channelName String?
  thumbnail   String?
  content     String   @default("")
  status      String   @default("unwatched") // unwatched, watching, watched
  important   Boolean  @default(false)
  completed   Boolean  @default(false)
  folderId    String?
  folder      Folder?  @relation(fields: [folderId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Canvas {
  id        String       @id @default(uuid())
  name      String
  data      String       @default("{}") // React Flow data as JSON string (nodes + edges)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model KanbanTask {
  id          String   @id @default(uuid())
  title       String
  description String   @default("")
  status      String   @default("todo") // todo, in-progress, on-hold, done
  position    Int      @default(0) // For ordering within column
  priority    String   @default("medium") // low, medium, high
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status, position])
}
