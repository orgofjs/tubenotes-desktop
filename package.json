{
  "name": "tubenotes",
  "version": "0.2.7",
  "author": "orgofjs (https://github.com/orgofjs)",
  "description": "Visual Video Knowledge Base - note-taking application",
  "homepage": "https://github.com/orgofjs/tubenotes-desktop#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orgofjs/tubenotes-desktop.git"
  },
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron-rebuild": "electron-rebuild -f -w better-sqlite3",
    "build-electron": "next build && electron-builder",
    "build-win": "next build && electron-builder --win",
    "build-mac": "next build && electron-builder --mac",
    "build-linux": "next build && electron-builder --linux",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@ducanh2912/next-pwa": "^10.2.9",
    "@electron/rebuild": "^4.0.2",
    "@prisma/client": "^6.19.2",
    "@tailwindcss/postcss": "^4",
    "@tiptap/extension-character-count": "^3.15.3",
    "@tiptap/extension-link": "^3.15.3",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@uiw/react-codemirror": "^4.25.4",
    "@xyflow/react": "^12.10.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "date-fns": "^4.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "framer-motion": "^12.26.2",
    "i18next": "^25.8.0",
    "lucide-react": "^0.562.0",
    "next": "^16.1.6",
    "prisma": "^6.19.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-i18next": "^16.5.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.tubenotes.app",
    "productName": "TubeNotes",
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "out",
        "to": "out",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*.node"
    ],
    "electronLanguages": ["en", "de", "tr"],
    "compression": "maximum",
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon-512x512.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon-512x512.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "perMachine": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "orgofjs",
        "repo": "tubenotes-desktop"
      }
    ]
  }
}
